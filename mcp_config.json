{
  "mcpServers": {
    "filesystem": {
      "type": "local",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/workspaces", "/shared"],
      "tools": ["*"],
      "_comment": "Local filesystem access."
    },
    "git": {
      "type": "local",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "tools": ["*"],
      "_comment": "Git operations."
    },
    "postgres": {
      "type": "local",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}"
      },
      "tools": ["*"],
      "_comment": "Database access via env var."
    },
    "cloudflare": {
      "type": "local",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-cloudflare"],
      "env": {
        "CLOUDFLARE_API_TOKEN": "${CLOUDFLARE_API_TOKEN}",
        "CLOUDFLARE_ACCOUNT_ID": "${CLOUDFLARE_ACCOUNT_ID}"
      },
      "tools": ["*"],
      "_comment": "Cloudflare access via env vars."
    },
    "heady-server": {
      "command": "npx",
      "args": [
        "-y",
        "heady-mcp-server"
      ],
      "env": {
        "HEADY_API_TOKEN": "${HEADY_SECRET}",
        "HEADY_ENV": "production"
      }
    }
  }
}
